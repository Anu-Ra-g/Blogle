<!DOCTYPE html>
<html lang="en">

<head>
    <%- include('./partials/head') %>
    <title>Blog</title>
</head>

<body>
    <%- include('./partials/nav') %>

    <div class="container mt-4">
        <h1><%= blog.title %></h1>
        <img src="<%= blog.coverImageURL %>" width="700px" alt="">
        <pre class="mt-3"><%= blog.body %></p>
    </div>

    <div class="container mt-4">
        <img src="<%= blog.createdBy.profileImageURL %>" alt="" width="50px">
        <p><%= blog.createdBy.fullName %></p>
    </div>

    <div class="container mt-3">
        <h2>Comments (<%= comments.length %>)</h2>
        <% if (locals.user) { %>
            <form action="/blog/comment/<%= blog._id %>" method="post">
                <div class="mb-3">
                    <input type="text" class="form-control" 
                    name="content" placeholder="Enter your comment...">
                  </div>
                <button type="submit" class="btn btn-sm btn-primary">Add</button>
            </form>
            
        <% } %>
        <div class="mt-3">
            <% comments.forEach(comment => { %>
                <div>
                    <img src="<%= comment.createdBy.profileImageURL %>" alt="" width="50px">
                    <p><%= comment.createdBy.fullName %></p>
                    <pre><%= comment.content %></pre>
                </div>
            <% }) %>
        </div>
    </div>
    
    <%- include('./partials/script') %>
</body>

</html>